<tr class="bg-white dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
    <th scope="row" class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white">
        <%= link_to row, class: "ps-3" do %>
            <div class="text-base font-semibold"><%= truncate(row.content, length: 15) %></div>
            <div class="font-normal text-gray-500"><%= truncate(row.translation, length: 15) %></div>
        <% end %>
    </th>
    <td class="px-6 py-4">
        <%= link_to row.dictionary.name, words_path(dictionary_id: row.dictionary), type:"button", class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
    </td>
    <td class="px-6 py-4">
        <%= time_ago(row.created_at) %>
    </td>
</tr>
