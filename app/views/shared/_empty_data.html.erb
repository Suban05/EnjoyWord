<div class="flex flex-col items-center">
    <p class="mt-5 mb-3 text-lg text-center text-gray-500 md:text-xl dark:text-gray-400">
        <% if local_assigns[:content] %>
            <%= local_assigns[:content] %>
        <% else %>
            <%= t('empty_for_now') %>
        <% end %>
    </p>
    <% if local_assigns[:button_path] %>
        <%= link_to local_assigns[:button_title],
            local_assigns[:button_path],
            class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium",
            data: local_assigns[:button_data]
        %>
    <% end %>
</div>
