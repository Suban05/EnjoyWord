<%= turbo_frame_tag Word.new do %>
    <%= form_with(url: word_loaders_path(dictionary_id: @dictionary), class: "contents") do |form| %>
        <div class="my-5">
            <%= form.label :words %>
            <%= form.text_area :words, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>
        <%= form.hidden_field :dictionary_id, value: @dictionary.id %>
        <div class="inline">
            <%= form.submit 'Load', class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
            <%= link_to t('word.back_to_words'), words_path(dictionary_id: @dictionary), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        </div>
    <% end %>
<% end %>
