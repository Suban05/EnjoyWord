<div class="mx-auto" data-controller="words">
  <%= link_to sanitize("&larr; #{t('word.back_to_words')}"), @word.dictionary %>
  <div class="mt-3"></div>
  <div class="flex items-center">
    <h1 class="font-bold text-4xl"><%= @word.content %></h1>
    <%= render 'pronunciation_data', @pronunciation_data %>
  </div>
  <p class="mt-4 mb-4"><%= @word.translation %></p>
  <%= render 'shared/child_items', id: 'examples', src: examples_path(word_id: @word) %>
</div>
