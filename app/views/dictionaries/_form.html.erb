<%= turbo_frame_tag dictionary do %>
    <%= form_with(model: dictionary, class: "contents") do |form| %>
        <%= render 'shared/error_messages', object: dictionary %>

        <div class="my-5">
            <%= form.label :name %>
            <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="my-5">
            <%= form.label :translation_type, class: "block mb-2 text-gray-900 dark:text-white" %>
            <%= form.select :translation_type,
                Dictionary.translation_types.keys.map { |type| [type.humanize, type] },
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>

        <div class="inline">
            <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
            <%= link_to t('dictionary.back_to_dictionaries'), dictionaries_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        </div>
    <% end %>
<% end %>
