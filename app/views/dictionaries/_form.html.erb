<%= turbo_frame_tag dictionary do %>
    <%= form_with(model: dictionary, class: "contents") do |form| %>
        <%= render 'shared/error_messages', object: dictionary %>

        <div class="my-5">
            <%= form.label :name %>
            <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="my-5">
            <%= form.label :translation_type, class: "block mb-2 text-gray-900 dark:text-white" %>
            <%= form.select :translation_type,
                Dictionary.translation_types.keys.map { |type| [type.humanize, type] },
                { include_blank: true },
                class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"
            %>
        </div>

        <div class="inline">
            <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
            <%= link_to t('dictionary.back_to_dictionaries'), dictionaries_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        </div>
    <% end %>
<% end %>
