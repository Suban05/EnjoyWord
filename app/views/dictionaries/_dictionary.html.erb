<%= turbo_frame_tag dictionary do %>
  <p class="my-5">
    <%= dictionary.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to t('dictionary.show.action'), dictionary, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium", data: { turbo_frame: '_top' } %>
    <%= link_to t('dictionary.edit.action'), edit_dictionary_path(dictionary), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
<% end %>
